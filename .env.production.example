# =============================================================================
# Production Environment Variables
# =============================================================================
# This file is for production deployment
# Copy to .env.production for production setup
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================
# IMPORTANT: Use strong passwords and secure connections
DATABASE_URL="postgresql://username:strong_password@your-db-host:5432/hrm_prod_db"

# =============================================================================
# NEXTAUTH CONFIGURATION (Production)
# =============================================================================
# IMPORTANT: Generate a strong secret key
# Command: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-strong-production-secret-key-here"
NEXTAUTH_URL="https://your-domain.com"

# =============================================================================
# REDIS CONFIGURATION (Production)
# =============================================================================
REDIS_URL="redis://username:password@your-redis-host:6379"

# =============================================================================
# APPLICATION CONFIGURATION (Production)
# =============================================================================
NODE_ENV="production"
PORT=3000

# =============================================================================
# EMAIL CONFIGURATION (Production)
# =============================================================================
# IMPORTANT: Use real SMTP credentials
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT=587
SMTP_USER="your-production-email@yourdomain.com"
SMTP_PASSWORD="your-strong-email-password"
SMTP_FROM="noreply@yourdomain.com"

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION (Production)
# =============================================================================
LOG_LEVEL="warn"
ENABLE_DEBUG_LOGS=false
ENABLE_DEV_TOOLS=false

# =============================================================================
# BACKUP CONFIGURATION (Production)
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="/var/backups/hrm"

# =============================================================================
# SSL CONFIGURATION (Production)
# =============================================================================
SSL_CERT_PATH="/etc/ssl/certs/your-domain.crt"
SSL_KEY_PATH="/etc/ssl/private/your-domain.key"

# =============================================================================
# MONITORING CONFIGURATION (Production)
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# EXTERNAL API CONFIGURATION (Production)
# =============================================================================
# Add your production API keys here
# MOM_API_KEY="your-production-mom-api-key"
# IRAS_API_KEY="your-production-iras-api-key"