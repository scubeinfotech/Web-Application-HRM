# =============================================================================
# Local Development Environment Variables
# =============================================================================
# This file is for local development only
# Copy to .env.local for local development setup
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (Local Development)
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/hrm_dev_db"

# =============================================================================
# NEXTAUTH CONFIGURATION (Local Development)
# =============================================================================
NEXTAUTH_SECRET="local-development-secret-key-change-this"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# REDIS CONFIGURATION (Local Development)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# APPLICATION CONFIGURATION (Local Development)
# =============================================================================
NODE_ENV="development"
PORT=3000

# =============================================================================
# EMAIL CONFIGURATION (Local Development - Use mailhog for testing)
# =============================================================================
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="test@localhost"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_DEV_TOOLS=true
ENABLE_DEBUG_LOGS=true
ENABLE_HOT_RELOAD=true
LOG_LEVEL="debug"

# =============================================================================
# TEST CONFIGURATION
# =============================================================================
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/hrm_test_db"