# =============================================================================
# HRM System Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your setup
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hrm_db"

# Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# Secret key for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-key-here-change-this-in-production"

# Base URL for NextAuth (important for production)
NEXTAUTH_URL="http://localhost:3000"

# NextAuth URL for production (uncomment and update for production)
# NEXTAUTH_URL="https://your-domain.com"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection string for caching and sessions
REDIS_URL="redis://localhost:6379"

# Redis password (if required)
# REDIS_PASSWORD="your-redis-password"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV="development"

# Application port (for development)
PORT=3000

# Application name
APP_NAME="HRM System"
APP_VERSION="1.0.0"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourcompany.com"

# Email settings
EMAIL_FROM_NAME="HRM System"
EMAIL_REPLY_TO="support@yourcompany.com"

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760  # 10MB

# Allowed file types for uploads
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Upload directory
UPLOAD_DIR="./uploads"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings
CORS_ORIGIN="http://localhost:3000"

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_MAX_AGE=86400  # 24 hours in seconds

# =============================================================================
# SINGAPORE HR CONFIGURATION
# =============================================================================
# CPF contribution rates (these can be updated based on current rates)
CPF_EMPLOYEE_RATE_55_BELOW=0.20
CPF_EMPLOYEE_RATE_55_TO_60=0.13
CPF_EMPLOYEE_RATE_60_TO_65=0.075
CPF_EMPLOYEE_RATE_65_ABOVE=0.05

CPF_EMPLOYER_RATE_55_BELOW=0.17
CPF_EMPLOYER_RATE_55_TO_60=0.13
CPF_EMPLOYER_RATE_60_TO_65=0.09
CPF_EMPLOYER_RATE_65_ABOVE=0.075

# Skills Development Levy (SDL) rate
SDL_RATE=0.0035  # 0.35% of employee's wages

# Foreign Worker Levy (FWL) settings
FWL_S_PASS_RATE=300  # SGD per month
FWL_WORK_PERMIT_RATE=300  # SGD per month

# =============================================================================
# COMPANY CONFIGURATION
# =============================================================================
# Default company settings
DEFAULT_COMPANY_NAME="Your Company Pte Ltd"
DEFAULT_COMPANY_REG_NO="12345678X"
DEFAULT_COMPANY_ADDRESS="123 Business Street, Singapore 123456"
DEFAULT_COMPANY_PHONE="+65 1234 5678"
DEFAULT_COMPANY_EMAIL="info@yourcompany.com"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Log file settings
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE=10485760  # 10MB
LOG_MAX_FILES=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check settings
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_QUERY_LOGGING=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="./backups"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development-only settings
ENABLE_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true

# Test database (for testing)
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/hrm_test_db"

# =============================================================================
# PRODUCTION CONFIGURATION (Uncomment for production)
# =============================================================================
# Production-specific settings
# NODE_ENV="production"
# ENABLE_DEV_TOOLS=false
# ENABLE_DEBUG_LOGS=false
# LOG_LEVEL="warn"

# SSL Configuration
# SSL_CERT_PATH="./ssl/cert.pem"
# SSL_KEY_PATH="./ssl/key.pem"

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# Singapore Government APIs (if needed)
# MOM_API_KEY="your-mom-api-key"
# MOM_API_BASE_URL="https://api.mom.gov.sg"

# IRAS API for tax calculations
# IRAS_API_KEY="your-iras-api-key"
# IRAS_API_BASE_URL="https://api.iras.gov.sg"

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Accounting software integration
# QUICKBOOKS_CLIENT_ID="your-quickbooks-client-id"
# QUICKBOOKS_CLIENT_SECRET="your-quickbooks-client-secret"
# QUICKBOOKS_REDIRECT_URI="http://localhost:3000/api/quickbooks/callback"

# Payroll integration
# PAYROLL_API_KEY="your-payroll-api-key"
# PAYROLL_API_BASE_URL="https://api.payroll-provider.com"

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker-specific settings
DOCKER_CONTAINER_NAME="hrm-app"
DOCKER_IMAGE_NAME="hrm-system"
DOCKER_TAG="latest"

# =============================================================================
# NOTES
# =============================================================================
# 1. Always keep your .env file secure and never commit it to version control
# 2. Use strong, unique passwords for production
# 3. Regularly rotate your secrets and API keys
# 4. Test all configuration changes in development first
# 5. Keep backup of your environment variables
# =============================================================================